{
    "name": "xnat2bids-heudiconv",
    "description": "Export DICOMS to BIDS format using heudiconv",
    "version": "0.1.0",
    "schema-version": "1.0",
    "type": "docker",
    "image": "brownbnc/xnat2bids-heudiconv:v0.1.0",
    "command-line": "./xnat_command.sh #SESSION_ID# $XNAT_HOST $XNAT_USER $XNAT_PASS",
    "workdir": "/opt/src/bids",
    "override-entrypoint": true,
    "mounts": [
        {
            "name": "bidsmap_mount",
            "writable": "false",
            "path": "/bidsmap"
        }
    ],
    "inputs": [
        {
            "name": "session_id",
            "description": "XNAT ID of the session",
            "type": "string",
            "required": true,
            "replacement-key": "#SESSION_ID#"
        }
    ],
    "outputs": [],
    "xnat": [
        {
            "name": "xnat2bids-heudiconv",
            "description": "Export DICOMS to BIDS format using heudiconv",
            "contexts": ["xnat:imageSessionData"],
            "external-inputs": [
                {
                    "name": "session",
                    "description": "Input session",
                    "type": "Session",
                    "required": true
                }
            ],
            "derived-inputs": [
                {
                    "name": "derived_session_id",
                    "description": "The session's id",
                    "type": "string",
                    "derived-from-wrapper-input": "session",
                    "derived-from-xnat-object-property": "id",
                    "provides-value-for-command-input": "session_id"
                }
            ],
            "output-handlers": []
        }
    ]
}